@model vidlyy.ViewModels.CreatCustomerModelView
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>New Customer</h1>
@using (Html.BeginForm("Create", "Customer"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Bithdate)
        @Html.TextBoxFor(m => m.Customer.Bithdate, new { @class = "form-control" })
    </div>
    <div class="dropdown-toggle">
        @Html.LabelFor(m=>m.MemberShipTypes)
        @Html.DropDownListFor(m=>m.Customer.MemberShipTypeId,new SelectList(Model.MemberShipTypes,"id", "MemberTypeName"),"select membership type", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subsccribe To Newsletter?
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

