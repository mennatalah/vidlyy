@model vidlyy.ViewModels.CreateMovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Movie</h1>
@using (Html.BeginForm("Create", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.movie.Name)
        @Html.TextBoxFor(m => m.movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.movie.DateAdd)
        @Html.TextBoxFor(m => m.movie.DateAdd, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.movie.NumberInStock)
        @Html.TextBoxFor(m => m.movie.NumberInStock, new { @class = "form-control" })
    </div>
    <div class="dropdown-toggle">
        @Html.LabelFor(m => m.movie.GenreId)
        @Html.DropDownListFor(m=>m.movie.GenreId,new SelectList(Model.Genres,"Id","Name"),"", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m=>m.movie.Id)
    <div class="form-group">
        <button type="submit" class="btn btn-primary"> Save</button>
    </div>

}

