@model IEnumerable<vidlyy.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
<a class="btn btn-primary" href="/Movie/New" >Add Movie</a>

@{
    if (!Model.Any())
    {
        <p>There Is No Movies</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <tr>
                <th>Movies</th>
                <th>Genre</th>
            </tr>
            @foreach (var m in Model)
            {
                <tr>
                    <td>
                        <a href="/Movie/Edit/@m.Id">@m.Name</a>
                    </td>
                    <td>
                        @m.Genre.Name
                    </td>
                </tr>
            }
        </table>
    }


}

