@model vidlyy.ViewModels.Movies
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

@{
    if (Model.movies.Count == 0)
    {
        <p>There Is No Movies</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <tr>
                <th>Movies</th>
            </tr>
            @foreach (var m in Model.movies)
            {
                <tr>
                    <td>
                        @m.Name
                    </td>
                </tr>
            }
        </table>
    }


}

